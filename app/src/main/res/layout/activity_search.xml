<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/edSearchMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_search"
                android:gravity="center_vertical"
                android:hint="Search for music or artist..."
                android:textColor="#F2F2F2"
                android:textColorHint="#D8D8D8"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#b2b2b2"
                android:onClick="searchMusic"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:text="SEARCH"
                android:textSize="24dp"
                android:textStyle="bold" />

            <com.startapp.android.publish.ads.banner.banner3d.Banner3D
                android:id="@+id/startAppBanner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/llSearchResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>